---
import type { CollectionEntry } from 'astro:content';

interface Props {
	post: CollectionEntry<'blog'>;
}

const { post } = Astro.props;
---

<article class="group relative flex flex-col items-start p-6 bg-white dark:bg-gray-800/50 rounded-xl border border-gray-100 dark:border-gray-800 hover:border-blue-100 dark:hover:border-blue-900/50 hover:shadow-lg hover:shadow-blue-500/5 transition-all duration-300">
	<div class="flex items-center gap-x-4 text-xs mb-3">
		<time datetime={post.data.pubDate.toISOString()} class="text-gray-500">
			{post.data.pubDate.toLocaleDateString('en-US', {
				year: 'numeric',
				month: 'long',
				day: 'numeric',
			})}
		</time>
		{post.data.tags && post.data.tags.length > 0 && (
			<div class="flex gap-1.5">
				{post.data.tags.map((tag) => (
					<span class="relative z-10 rounded-full bg-gray-50 dark:bg-gray-800 px-2.5 py-0.5 font-medium text-gray-600 dark:text-gray-300 hover:bg-gray-100 dark:hover:bg-gray-700 transition-colors">
						#{tag}
					</span>
				))}
			</div>
		)}
	</div>
	<div class="group relative max-w-xl">
		<h3 class="mt-3 text-lg font-semibold leading-6 text-gray-900 dark:text-gray-100 group-hover:text-blue-600 dark:group-hover:text-blue-400 transition-colors">
			<a href={`/blog/${post.slug}`}>
				<span class="absolute inset-0"></span>
				{post.data.title}
			</a>
		</h3>
		<p class="mt-3 text-sm leading-6 text-gray-600 dark:text-gray-400 line-clamp-3">
			{post.data.description}
		</p>
	</div>
</article>
